NAME	=	tester.a

SOURCES	=	pf_leaks.c \
			pf_main.c \
			pf_tester.c \

SRC_DIR	=	srcs

OBJ_DIR	=	obj

HEADER	=	includes

PRINTF	=	../ft_printf

SRCS 	=	$(addprefix $(SRC_DIR)/,$(SOURCES))
OBJS 	=	$(patsubst %, $(OBJ_DIR)/srcs/%, $(SOURCES:.c=.o))

CC		=	gcc
RM		=	rm -f

all:		$(NAME)

$(NAME):	$(OBJS)
	ar cr $(NAME) $(OBJS)

$(OBJ_DIR)/srcs/%.o: $(SRC_DIR)/%.c
	@mkdir -p obj/srcs
	$(CC) -c -I $(HEADER) -o $@ $<
	
tester:	all
	make -C $(PRINTF)/ all
	$(CC) $(OBJ_DIR)/srcs/pf_tester.o $(PRINTF)/libftprintf.a
	./a.out

main:	all
	make -C $(PRINTF)/ all
	$(CC) $(OBJ_DIR)/srcs/pf_main.o $(PRINTF)/libftprintf.a
	./a.out

leaks:	all
	make -C $(PRINTF)/ all
	$(CC) $(OBJ_DIR)/srcs/pf_leaks.o $(PRINTF)/libftprintf.a
	./a.out

db:		all
	make -C $(PRINTF)/ all
	$(CC) -g3 $(SRC_DIR)/pf_main.c $(PRINTF)/libftprintf.a
	lldb a.out

debug:	all
	make -C $(PRINTF)/ all
	$(CC) -g3 $(SRC_DIR)/pf_tester.c $(PRINTF)/libftprintf.a
	lldb a.out

clean:
	$(RM) $(OBJS)
	rm -rf $(OBJ_DIR)

fclean: clean
	$(RM) $(NAME)

del:	fclean
	$(RM) *.out
	rm -rf *.dSYM

re: fclean all

